include rose-pine.conf


font_family     Fira Code SemiBold
font_size 		12.0
bold_font       auto
italic_font      auto
bold_italic_font auto

gradient = 1
gradient_count = 4
url_color #4dc6ff

term xterm-256color

background_opacity 0.5
confirm_os_window_close 0

initial_window_width  640
initial_window_height 400
hide_window_decorations yes

cursor_shape block
cursor_blink_interval -1
cursor_stop_blinking_after 30.0

undercurl_style thin-dense
url_style curly
show_hyperlink_targets yes

modify_font underline_position 0
modify_font underline_thickness 100%

modify_font cell_width 100%
modify_font cell_height 2px

scrollback_lines 2000
wheel_scroll_min_lines 1

enable_audio_bell no
visual_bell_duration 0.0
visual_bell_color none
window_alert_on_bell no

selection_foreground none
selection_background none

window_padding_width 10 10

foreground #dddddd
background #000000
cursor #dddddd
